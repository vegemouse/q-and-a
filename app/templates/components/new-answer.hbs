{{#if addNewAnswer}}
  <h3>Answer Question</h3>
  <div>
    <form>

      <div class="form-group">
        <label for="author">Your name?</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="content">Answer</label>
        {{input value=content id="content"}}
      </div>

      <button {{action 'saveAnswer'}}>Submit</button>
      <button {{action 'AnswerFormHide'}}>Cancel</button>

    </form>
  </div>
{{else}}
  <button {{action 'answerFormShow'}}>Answer question</button>
{{/if}}
