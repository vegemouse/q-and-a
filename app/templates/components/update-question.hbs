{{#if updateQuestionForm}}
  <h3>Update Question</h3>
  <div>
    <form>

      <div class="form-group">
        <label for="author">Your name?</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="question">Your question?</label>
        {{input value=content id="question" placeholder=question.question}}
      </div>

      <div class="form-group">
        <label for="notes">Anything else we should know?</label>
        {{input value=notes id="notes" placeholder=question.notes}}
      </div>

      <button {{action 'update' question}}>Update</button>
      <button {{action 'updateFormHide'}}>Cancel</button>

    </form>
  </div>


{{else}}
  <button {{action 'updateQuestionForm'}}>Edit</button>
{{/if}}
